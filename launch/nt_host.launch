<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="nt_port" default="5800"/>
    <node name="ros_networktables_bridge" pkg="ros_networktables_bridge_host" type="ros_networktables_bridge_node.py" output="screen" required="false">
        <param name="is_server" value="true"/>
        <param name="port" value="$(arg nt_port)"/>
    </node>
</launch>
